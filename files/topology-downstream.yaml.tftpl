  %{~ endfor ~}

tikv_servers:
  %{~ for host in tikv_hosts ~}
  - host: ${host}
  %{~ endfor ~}

pd_servers:
  - host: 172.31.18.1

monitoring_servers:
  - host: 172.31.18.1

grafana_servers:
  - host: 172.31.18.1
